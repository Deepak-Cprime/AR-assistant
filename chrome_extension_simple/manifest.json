{
  "manifest_version": 3,
  "name": "TargetProcess Rule Generator",
  "version": "1.0.0",
  "description": "Generate automation and validation rules for TargetProcess with a simple floating button",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://*.tpondemand.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.tpondemand.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate TargetProcess Rules"
  }
}